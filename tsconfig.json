{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client", "node"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "/@admin/*": ["resources/admin/*"],
      "/@admin:plugins/*": ["./resources/admin/assets/ts/plugins/*"],
      "/@admin:components/*": ["./resources/admin/assets/ts/components/*"],
      "/@admin:layouts/*": ["./resources/admin/assets/ts/layouts/*"],
      "/@admin:utils/*": ["./resources/admin/assets/ts/utils/*"],
      "/@admin:views/*": ["./resources/admin/assets/ts/views/*"]
    }
  },
  "include": ["resources/**/*.ts", "resources/**/*.d.ts", "resources/**/*.tsx", "resources/**/*.vue"]
}
